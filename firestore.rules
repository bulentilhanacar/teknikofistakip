
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for projects collection
    match /projects/{projectId} {
      // Allow read, update, delete if the user is authenticated
      allow read, update, delete: if request.auth != null;
      
      // Allow create if the user is authenticated and the ownerId matches their uid
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // Allow list if the user is authenticated
      allow list: if request.auth != null;
      
      // Rules for all subcollections under a project
      match /{allChildren=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
