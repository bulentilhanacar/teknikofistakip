
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is the owner of a project
    function isProjectOwner(projectId) {
      return get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid;
    }
    
    // Users can create projects for themselves
    match /projects/{projectId} {
      allow read, update, delete: if isProjectOwner(projectId);
      allow create: if request.resource.data.ownerId == request.auth.uid;
      
      // Allow users to list only their own projects
      allow list: if request.auth != null && request.query.where.ownerId == request.auth.uid;
      
      // Users can only access subcollections of projects they own
      match /{collection}/{docId} {
        allow read, write: if isProjectOwner(projectId);
      }
    }
  }
}
